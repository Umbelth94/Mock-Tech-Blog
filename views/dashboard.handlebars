<div> 
    <h1>Welcome, {{name}}</h1>
    <h2>Your Blog Posts:</h2>
    {{#if blog_posts.length}}
        {{#each blog_posts}}
            <section class="card">
                <a href="blogpost/{{id}}" class="link-underline-light">
                    <h3>{{this.title}}</h3>
                    <p>{{this.body_content}}</p>
                    <p>Created on: {{this.date_created}}</p>
                </a> <!-- Move this closing tag inside the section -->
            </section>
        {{/each}}
    {{else}}
        <p>No blog posts found</p>
    {{/if}}
</div>

<div id="create-post-container">
    <h3>Create a new blog post</h3>
    <form class="form new-post-form">
        <div class="form-group">
            <label for="post-title">Post Title:</label>
            <input type="text" class="form-input" id="post-title" name="post-title">
        </div>
        <div class="form-group">
            <label for="post-body">Post Content:</label>
            <input type="text" class="form-input" id="post-body" name="post-body">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script src="./js/submit.js"></script>